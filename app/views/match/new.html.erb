<%= form_for(@match, url: match_index_path(@match), :html => {:class => "form-inline"}) do |f| %>

    <% if @match.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@match.errors.count, "error") %> prohibited this player from being saved:</h2>

          <ul>
            <% @match.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="form-group">
      <%= f.label :name, "Name:", class: "col-md-4 control-label" %>
      <div class="col-md-8">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :name, "Team1:", class: "col-md-4 control-label" %>
      <div class="col-md-8">
        <%= f.select :team1_id, options_for_select(Team.all.map { |p| [p.name, p.id] })%>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :name, "Team1 Score:", class: "col-md-4 control-label" %>
      <div class="col-md-8">
        <%= f.text_field :team1_score, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :name, "Team2", class: "col-md-4 control-label" %>
      <div class="col-md-8">
        <%= f.select :team2_id, options_for_select(Team.all.map { |p| [p.name, p.id] })%>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :name, "Team2 Score:", class: "col-md-4 control-label" %>
      <div class="col-md-8">
        <%= f.text_field :team2_score, class: "form-control" %>
      </div>
    </div>


    <div class="actions">
      <%= f.submit %>
    </div>

<% end %>