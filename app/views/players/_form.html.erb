<%= form_with(model: player, local: true, :html => {:class => "form-horizontal"}) do |form| %>

  <div class="form-group">
    <%= form.label :name, class: "col-md-1 control-label"%>
    <div class="col-md-8">
      <%= form.text_field :name %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :employeeId, class: "col-md-1 control-label" %>
    <div class="col-md-8">
      <%= form.text_field :employee_id %>
      <p>*EmployeeId must me unique</p>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-1 control-label">
      <%= form.submit %>
    </div>
  </div>
<% end %>